
import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.IOException;

public class ProgrammingFun {

    public static void main(String[] args) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));

        int userChoice;
        do {
            System.out.println("\nMenu:");
            System.out.println("1. Get the Factorial");
            System.out.println("2. Make Fibonacci Series");
            System.out.println("3. Exit");
            System.out.print("Input your option: ");
            userChoice = Integer.parseInt(reader.readLine());

            switch (userChoice) {
                case 1:
                    System.out.print("Toss in a positive integer: ");
                    int numForFactorial = Integer.parseInt(reader.readLine());
                    long factorialResult = computeFactorial(numForFactorial);
                    System.out.println("Factorial of " + numForFactorial + " is " + factorialResult);
                    break;
                case 2:
                    System.out.print("Specify the count of Fibonacci terms: ");
                    int numFibTerms = Integer.parseInt(reader.readLine());
                    produceFibonacci(numFibTerms);
                    break;
                case 3:
                    System.out.println("Signing off....");
                    break;
                default:
                    System.out.println("Invalid choice. Pick 1, 2, or 3,");
            }
        } while (userChoice != 3);
    }

    private static long computeFactorial(int n) {
        if (n == 0 || n == 1)
            return 1;
        else
            return n * computeFactorial(n - 1);
    }

    private static void produceFibonacci(int numTerms) {
        int firstNum = 0, secondNum = 1;
        System.out.print("Fibonacci series (" + numTerms + " terms): ");
        for (int i = 0; i < numTerms; i++) {
            System.out.print(firstNum + " ");
            int sum = firstNum + secondNum;
            firstNum = secondNum;
            secondNum = sum;
        }
        System.out.println();
    }
}
